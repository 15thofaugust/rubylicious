<% if version.item_type == "Relationship" %>
  <div class="form-container-row form-container-row-log">
    <div class="form-container-col form-container-left-log">
      <p><%= t(".follow",
        followed: link_to("#{image_tag(Relationship.find_by_id(version.item_id).followed.avatar)}
          #{Relationship.find_by_id(version.item_id).followed.username}".html_safe,
          user_path(Relationship.find_by_id(version.item_id).followed))).html_safe %></p>
      <h6><%= version.created_at.strftime("%c") %></h6>
    </div>
    <div class="form-container-col form-container-right-log" >
    </div>
  </div>
<% end %>
<% if version.item_type == "Like" %>
  <div class="form-container-row form-container-row-log">
    <div class="form-container-col form-container-left-log">
      <p><%= t(".like",
        user: link_to(Like.find_by_id(version.item_id).post.user.username,
          user_path(Like.find_by_id(version.item_id).post.user)),
        photo: link_to(t(".photo"),
          post_path(Like.find_by_id(version.item_id).post))).html_safe %></p>
      <h6><%= version.created_at.strftime("%c") %></h6>
    </div>
    <div class="form-container-col form-container-right-log" >
      <%= link_to(image_tag(Like.find_by_id(version.item_id).post.image.url(:thumb)),
        post_path(Like.find_by_id(version.item_id).post)) %>
    </div>
  </div>
<% end %>
<% if version.item_type == "Comment" %>
  <div class="form-container-row form-container-row-log">
    <div class="form-container-col form-container-left-log">
      <p><%= t(".comment",
        content: "<i>#{Comment.find_by_id(version.item_id).content}</i>".html_safe,
        user: link_to(Comment.find_by_id(version.item_id).post.user.username,
          user_path(Comment.find_by_id(version.item_id).post.user)),
        photo: link_to(t(".photo"),
          post_path(Comment.find_by_id(version.item_id).post))).html_safe %></p>
      <h6><%= version.created_at.strftime("%c") %></h6>
    </div>
    <div class="form-container-col form-container-right-log" >
      <%= link_to(image_tag(Comment.find_by_id(version.item_id).post.image.url(:thumb)),
        post_path(Comment.find_by_id(version.item_id).post)) %>
    </div>
  </div>
<% end %>

