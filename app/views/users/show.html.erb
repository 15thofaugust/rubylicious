<% provide :title, @user.fullname %>
<div class="user-page-container">
  <div class="user-page-header">
    <div class="user-page-avatar">
      <%= image_tag @user.avatar %>
    </div>
    <div class="user-page-info">
      <div class="user-page-info-row">
        <h3><%= @user.username %></h3>
      </div>
      <div class="user-page-info-row">
      </div>
      <div class="user-page-info-row">
        <p><b><%= @user.fullname %></b><%= @user.bio%></p>
      </div>
    </div>
  </div>
  <div class="user-page-main">
    <div class="user-page-main-wrapper">
      <% @posts.each do |p| %>
      <div class="user-post">
        <%= link_to image_tag(p.image), "#" %>
      </div>
      <% end %>
    </div>
    <nav id="page-nav">
      <%= will_paginate @posts %>
    </nav>
  </div>

  <script type="text/javascript">
  $(document).ready(function(){
  var $container = $('.user-page-main-wrapper');
    $container.masonry({
      itemSelector: '.user-post',
      columnWidth: function( containerWidth ) {
        return containerWidth / 3;
      }
    });
  });
</script>
</div>
