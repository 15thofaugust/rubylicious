$boxes = $('<%= j render @posts %>');
$('#my-posts').append($boxes).imagesLoaded(function(){
  $('#my-posts').masonry('reload');
});
<% if @posts.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @posts %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>
