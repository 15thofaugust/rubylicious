$(document).ready(function(){
  var $container = $('#my-posts');
  $container.masonry({
    itemSelector: '.post-box',
    columnWidth: function( containerWidth ) {
      return containerWidth / 2;
    }
  });
  $(".icon-upload").click(function(){
    $(".caption-popup-box").fadeIn(300);
    $(".caption-popup-box").addClass("popup");
    $(".dim").fadeIn(300);
  });
  $('.get-to-comment').each(function(){
    var id = $(this).attr('value');
    $(this).click(function(){
      $('.comment-box-' + id).focus();
    });
  });
});
